#cria os arquivos .o:
	gcc -c main.c -o main.o
	gcc -c matrizes.c -o matrizes.o
#executa:
	./matrizes
	
all: matrizes

	gcc -c main.c -o main.o
	gcc -c matrizes.c -o matrizes.o

matrizes: matrizes.o main.o
	gcc -Wall -Wextra -std=c99 matrizes.o main.o -o matrizes

matrizes.o: matrizes.c matrizes.h
	gcc -Wall -Wextra -std=c99 -c matrizes.c

main.o: main.c matrizes.h
	gcc -Wall -Wextra -std=c99 -c main.c

clean:
	rm -f matrizes.o main.o matrizes